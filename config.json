{
  "name": "Survey Piping Skip",

  "namespace": "Vanderbilt\\SurveyPipingSkip",

  "authors": [
    {
      "name": "Ryan Moore",
      "email": "datacore@vumc.org",
      "institution": "Vanderbilt University Medical Center"
    }
  ],

  "description": "Allow a survey in a project to be skipped if it has been completed in another designated project.",

  "framework-version": 2,

  "permissions": [
    "select_data",
    "redcap_save_record",
    "redcap_data_entry_form_top",
    "redcap_survey_page_top"
  ],

  "project-settings": [
    {
      "key": "project_piping",
      "name": "List of Projects to Pipe From",
      "type": "sub_settings",
      "repeatable": true,
      "sub_settings": [
        {
          "key": "source_project",
          "name": "Project to Pipe Survey Data From",
          "type":"project-id",
          "required": true
        },
        {
          "key": "source_part_id",
          "name": "Participant ID Field in Source Project",
          "type": "text",
          "required": true
        },
        {
          "key": "dest_part_id",
          "name": "Matching Participant ID Field in This Project",
          "type": "field-list",
          "required": true
        },
        {
          "key": "pipe_all_data",
          "name": "Pipe All Data from Source Project",
          "type":"radio",
          "choices": [
            {
              "value": "no",
              "name": "No"
            },
            {
              "value": "yes",
              "name": "Yes"
            }
          ],
          "required": true
        },
        {
          "key": "forms_pipe",
          "name": "Forms to Use in Piping",
          "type": "sub_settings",
          "repeatable": true,
          "sub_settings": [
            {
              "key": "source_form",
              "name": "Source Form Name (from REDCap URLs)",
              "type": "text",
              "required": true
            },
            {
              "key": "dest_form",
              "name": "Form Name on Current Project",
              "type": "form-list",
              "required": true
            }
          ]
        }
      ]
    }
  ]
}